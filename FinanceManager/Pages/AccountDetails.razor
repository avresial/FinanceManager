@page "/AccountDetails/{AccountName}"
@inherits AccountDetailsBase


<h3>@AccountName</h3>
@if (ErrorMessage != string.Empty)
{
    <div class="alert alert-warning" role="alert">
        @ErrorMessage
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Posting date</th>
                <th scope="col">Balance</th>
                <th scope="col">Balance change</th>
                <th scope="col">Sender name</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var entry in Entries)
            {
                <tr>
                    <td>@entry.PostingDate.ToString("yyyy-MM-dd")</td>
                    <td>@entry.Balance zł</td>
                    @if (entry.BalanceChange > 0)
                    {
                        <td style="background-color:lightgreen">@entry.BalanceChange zł</td>
                    }
                    else
                    {
                        <td style="background-color:lightcoral">@entry.BalanceChange zł</td>
                    }
                    <td>@entry.SenderName</td>
                </tr>
            }
        </tbody>
    </table>
}

