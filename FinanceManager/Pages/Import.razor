@page "/Import/{AccountName}"
@using FinanceManager.Core.Entities.Accounts
@using FinanceManager.Presentation.Components.ImportData

@if (accountType is null)
{
    <DisplaySpinner />
}
else
{
    <div class="container-fluid px-0" @ref=MyElementReference>
        @if (ErrorMessage != string.Empty)
        {
            <div class="alert alert-warning" role="alert">
                @ErrorMessage
            </div>
        }
        else if (accountType == typeof(BankAccount))
        {
            <ImportBankEntriesComponent AccountName="@AccountName" />
        }
        else if (accountType == typeof(InvestmentAccount))
        {
            <ImportStockEntriesComponent AccountName="@AccountName" />
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                @accountType type is not supported.
            </div>
        }
    </div>
}

