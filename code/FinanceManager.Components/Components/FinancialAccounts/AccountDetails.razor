@page "/AccountDetails/{AccountId:int}"
@using FinanceManager.Components.Components.FinancialAccounts.BankAccountComponents
@using FinanceManager.Components.Components.FinancialAccounts.BondAccountComponents
@using FinanceManager.Components.Components.FinancialAccounts.StockAccountComponents
@using FinanceManager.Domain.Entities.Bonds
@using FinanceManager.Domain.Entities.FinancialAccounts.Currencies
@using FinanceManager.Domain.Entities.Stocks

@if (accountType is null)
{
    <DisplaySpinner />
}
else
{
    <div class="container-fluid px-0" @ref=MyElementReference>
        @if (ErrorMessage != string.Empty)
        {
            <div class="alert alert-warning" role="alert">
                @ErrorMessage
            </div>
        }
        else if (accountType == typeof(CurrencyAccount))
        {
            <BankAccountDetailsPageContent AccountId="@AccountId" />
        }
        else if (accountType == typeof(StockAccount))
        {
            <StockAccountDetailsPageContent AccountId="@AccountId" />
        }
        else if (accountType == typeof(BondAccount))
        {
            <BondAccountDetailsPageContent AccountId="@AccountId" />
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                @accountType type is not supported.
            </div>
        }
    </div>
}