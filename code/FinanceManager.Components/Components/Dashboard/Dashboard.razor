@using FinanceManager.Components.Components.Dashboard.Cards
@using FinanceManager.Components.Components.Dashboard.Cards.Liabilities


<MudContainer Class="pb-2">
    <MudGrid Spacing="2">


        <MudItem xs="12" md="12">
            <NetWorthOverviewCard Height="@($"{_unitHeight}px")" StartDateTime="@StartDateTime" />
        </MudItem>

        <MudItem xs="12" md="6">
            <IncomeVsSpendingOverviewCard Height="@($"{_unitHeight * 2}px")" StartDateTime="@StartDateTime" EndDateTime="@EndDate" DisplayIncome DisplaySpending />
        </MudItem>

        <MudItem xs="12" md="6">
            <IncomeVsSpendingOverviewCard Height="@($"{_unitHeight * 2}px")" StartDateTime="@StartDateTime" EndDateTime="@EndDate" DisplaySpending UseOnlyPrimaryColor />
        </MudItem>

        <MudItem xs="12" md="6" lg="4">
            <LiabilityPerTypeOverviewCard Height="@($"{_unitHeight * 3}px")" StartDateTime="@StartDateTime" />
        </MudItem>

        <MudItem xs="12" md="6" lg="4">
            <SpendingCathegoryOverviewCard Height="@($"{_unitHeight * 3 }px")" StartDateTime="@StartDateTime" />
        </MudItem>

        <MudItem xs="12" md="6" lg="4">
            <AssetsPerTypeOverviewCard Height="@($"{_unitHeight * 3}px")" StartDateTime="@StartDateTime" />
        </MudItem>

        @* <MudItem xs="12" md="6">
            <IncomeVsSpendingOverviewCard Height="@($"{_unitHeight * 3}px")" StartDateTime="@StartDateTime" EndDateTime="@EndDate" DisplayIncome UseOnlyPrimaryColor />
        </MudItem> *@

    </MudGrid>
</MudContainer>

<DashboardDatePicker DateChanged=DateChanged StartingOption="ThisMonth" />
