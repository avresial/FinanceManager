
<MudCard Outlined Class="d-flex flex-nowrap" Style="@($"height:{Height};")">
    <MudPaper Class="flex-grow-0 p-3" Elevation="0">
        <MudText Typo=Typo.h5>Investment rate</MudText>
    </MudPaper>
    <MudPaper Class="flex-grow-1 overflow-auto p-3" Elevation="0">
        <MudText Typo=Typo.h3 class="card-subtitle text-muted">
            @if (_isLoading)
            {
                <StringSpinner CharactersCount="4" />
            }
            else
            {
                @if (_investmentRates.Any())
                {
                    foreach (var _investmentRate in _investmentRates.Where(x => x.Salary != 0).Take(1))
                    {
                        @($"{(100 * _investmentRate.GetPercentage()).ToString("0.00")}%")
                    }
                }
                else
                {
                    @("No data")
                }

            }
        </MudText>
    </MudPaper>
</MudCard>