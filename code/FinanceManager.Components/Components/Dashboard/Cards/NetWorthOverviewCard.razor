<div class="card" style="height:@Height; background-color:transparent">
    <div class="card-body">
        <h5 class="card-title">Total net worth</h5>
        @if (_totalNetWorth is not null)
        {
            <h1 class="card-subtitle mb-2 text-muted">@_totalNetWorth @_currency</h1>
        }
        else
        {
            <h1 class="card-subtitle mb-2 text-muted">No data</h1>
        }
    </div>
</div>