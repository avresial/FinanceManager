@using FinanceManager.Domain.Entities.Login
@using FinanceManager.Domain.Services
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@if (_userSession is not null)
{
    <MudMenu Label="@_label" TransformOrigin="Origin.TopCenter" AnchorOrigin="Origin.BottomCenter">
        <MudPaper Class="d-flex justify-center flex-grow-1 gap-1 flex-column" Elevation="0">
            <MudButton OnClick=BeginLogOut Color="Color.Primary">
                Log Out
            </MudButton>
        </MudPaper>
    </MudMenu>

    <MudText Typo="Typo.button" Color="Color.Primary">@_pricingLabel</MudText>
}