@page "/Liabilities"

@using FinanceManager.Components.Components.Dashboard.Cards.Liabilities
@using FinanceManager.Components.Services
@using FinanceManager.Domain.Repositories.Account
@using FinanceManager.Domain.Entities.Accounts
@using FinanceManager.Domain.Repositories
@using FinanceManager.Domain.Services
@using FinanceManager.Components.Components.Dashboard.Cards

<PageTitle>Liabilities</PageTitle>

<MudContainer>
    <MudGrid Spacing="2">
        <MudItem xs="12">
            <LiabilitiesTimeSeriesCard StartDateTime="DateTime.UtcNow.AddMonths(-1)" />
        </MudItem>

        <MudItem xs="12" lg="4">
            <LiabilityPerTypeOverviewCard StartDateTime="@DateTime.Now.AddMonths(-1)" Height="@($"{1.5 * _unitHeight}px")" />
        </MudItem>

        <MudItem xs="12" lg="4">
            <LiabilitiesPerAccountOverviewCard Height="@($"{1.5 * _unitHeight}px")" StartDateTime="DateTime.UtcNow.AddMonths(-1)" />
        </MudItem>

        <MudItem xs="12" lg="4">
            <LiabilitiesPerAccountOverviewCard DisplayAsChart="false" Height="@($"{1.5 * _unitHeight}px")" StartDateTime="DateTime.UtcNow.AddMonths(-1)" />
        </MudItem>

    </MudGrid>
</MudContainer>

