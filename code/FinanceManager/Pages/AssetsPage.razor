@page "/Assets"
@using FinanceManager.Components.Components.Dashboard.Cards.Assets


<PageTitle>Assets</PageTitle>
<MudContainer Class="mt-2">
    <MudGrid Spacing="2">
        <MudItem xs="12">
            <AssetsTimeSeriesCard StartDateTime=StartDate EndDateTime="@EndDate" />
        </MudItem>

        <MudItem xs="12" lg="4">
            <AssetsPerTypeOverviewCard StartDateTime=StartDate EndDateTime="@EndDate" Height="@($"{1.5 * _unitHeight}px")" />
        </MudItem>

        <MudItem xs="12" lg="4">
            <AssetsPerAccountOverviewCard StartDateTime=StartDate EndDateTime="@EndDate" Height="@($"{1.5 * _unitHeight}px")" />
        </MudItem>

        <MudItem xs="12" lg="4">
            <AssetsPerAccountOverviewCard DisplayAsChart="false" StartDateTime=StartDate EndDateTime="@EndDate" Height="@($"{1.5 * _unitHeight}px")" />
        </MudItem>

        <MudItem xs="12" lg="4">
            <InvestmentRateCard StartDateTime=StartDate EndDateTime="@EndDate" Height="@($"{1 * _unitHeight}px")" />
        </MudItem>
    </MudGrid>
</MudContainer>

<DashboardDatePicker DateChanged=DateChanged StartingOption="ThisMonth" />