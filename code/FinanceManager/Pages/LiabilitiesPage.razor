@page "/Liabilities"
@using FinanceManager.Components.Components.Dashboard.Cards.Liabilities

<PageTitle>Liabilities</PageTitle>

<MudContainer Class="mt-2">
    <MudGrid Spacing="2">
        <MudItem xs="12">
            <LiabilitiesTimeSeriesCard StartDateTime=StartDate EndDateTime="@EndDate" />
        </MudItem>
        
        <MudItem xs="12" lg="4">
            <LiabilityPerTypeOverviewCard StartDateTime=StartDate EndDateTime="@EndDate" Height="@($"{1.5 * _unitHeight}px")" />
        </MudItem>

        <MudItem xs="12" lg="4">
            <LiabilitiesPerAccountOverviewCard StartDateTime=StartDate EndDateTime="@EndDate" Height="@($"{1.5 * _unitHeight}px")" />
        </MudItem>

        <MudItem xs="12" lg="4">
            <LiabilitiesPerAccountOverviewCard DisplayAsChart="false" StartDateTime=StartDate EndDateTime="@EndDate"  Height="@($"{1.5 * _unitHeight}px")" />
        </MudItem>
    </MudGrid>
</MudContainer>


<DashboardDatePicker DateChanged=DateChanged StartingOption="ThisMonth" />