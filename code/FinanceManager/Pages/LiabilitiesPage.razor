@page "/Liabilities"
@using FinanceManager.Components.Components.Dashboard.Cards.Liabilities


<PageTitle>Liabilities</PageTitle>

<MudContainer>
    <MudGrid Spacing="2">
        <MudItem xs="12">
            <LiabilitiesTimeSeriesCard StartDateTime=StartDate />
        </MudItem>

        <MudItem xs="12" lg="4">
            <LiabilityPerTypeOverviewCard StartDateTime=StartDate Height="@($"{1.5 * _unitHeight}px")" />
        </MudItem>

        <MudItem xs="12" lg="4">
            <LiabilitiesPerAccountOverviewCard Height="@($"{1.5 * _unitHeight}px")" StartDateTime=StartDate />
        </MudItem>

        <MudItem xs="12" lg="4">
            <LiabilitiesPerAccountOverviewCard DisplayAsChart="false" Height="@($"{1.5 * _unitHeight}px")" StartDateTime=StartDate />
        </MudItem>

    </MudGrid>
</MudContainer>


<DashboardDatePicker DateChanged=DateChanged StartingOption="ThisMonth" />