
<div class="container">
	<div class="row g-1">

		<div class="col-md-12 col-lg-8">
			<div class="row justify-content-center g-1">
				<div class="col-xs-12 col-md-12">
					<NetWorthOverview Height="@($"{UnitHeight}px")"></NetWorthOverview>
				</div>

				<div class="col-xs-12 col-md-6">
					<SpendingOverview Height="@($"{UnitHeight*2}px")"></SpendingOverview>
				</div>

				<div class="col-xs-12 col-md-6">
					<IncomeOverview Height="@($"{UnitHeight*2}px")"></IncomeOverview>
				</div>


			</div>


		</div>

		<div class="col-xs-12 col-md-6 col-lg-4">

			<SpendingCathegoryOverview Height="@($"{UnitHeight * 3 + 5}px")"></SpendingCathegoryOverview>

		</div>
		
		<div class="col-xs-12 col-md-6 col-lg-4">
			<div class="row g-1">
				<div class="col-xs-12 col-md-12">
					<IncomeSourceOverview Height="@($"{UnitHeight * 3}px")"></IncomeSourceOverview>
				</div>
			</div>
		</div>

		<div class="col-md-12 col-lg-8">

			<div class="row justify-content-center g-1">
				<div class="col-xs-12 col-md-6">
					<AssetsOverview Height="@($"{UnitHeight*4}px")"></AssetsOverview>
				</div>
				<div class="col-xs-12 col-md-6">
					<IncomeVsSpendingOverview Height="@($"{UnitHeight * 3}px")"></IncomeVsSpendingOverview>
				</div>
			</div>

		</div>

		
	</div>
</div>


@code
{
	const int UnitHeight = 100;
}
